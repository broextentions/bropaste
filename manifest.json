{
  "manifest_version": 3,
  "name": "BroPaste",
  "description": "Quickly paste predefined text snippets via context menu. Paste predefined text snippets into input fields via popup and context menu. Works only on user action, does not collect or send any browsing data.",
  "version": "1.0.0",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

"permissions": [
    "contextMenus",
    "storage",
    "clipboardWrite",
    "activeTab",
    "scripting"
  ]
}