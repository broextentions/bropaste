{
  "manifest_version": 3,
  "name": "BroPaste",
  "description": "Quickly fill forms using saved text snippets via context menu or popup. Fast, handy, and secure autofill tool.",
  "version": "1.0.0",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

"permissions": [
    "contextMenus",
    "storage",
    "clipboardWrite",
    "activeTab",
    "scripting"
  ]

}
